<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LessonPage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Course"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/lessonPageCourse"
                android:textSize="25dp"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="Lesson Name"
                android:id="@+id/lessonPageName"
                android:textSize="20dp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/lessonPageText"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Lesson Text"/>

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/lessonYoutubePlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:showFullScreenButton="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Resources"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="resource"
            android:id="@+id/lessonPageResource"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lessonDownload"
            android:text="DOWNLOAD"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@color/color1"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>